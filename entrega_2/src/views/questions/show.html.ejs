<h1><%= user.name %></h1>
<h1><%= question.title %></h1>
<% const qua = question.updatedAt %>
<% var minutes = qua.getMinutes().toString() %>
<% if (minutes.length == 1) {minutes = "0" + minutes} %>
<h4>Escrito a las <%= qua.getHours() %>:<%= minutes %> horas el d√≠a <%= qua.getDate() %>/<%= qua.getMonth() %>/<%= qua.getYear() + 1900 %> </h4>
<p><%= question.body %><p>
  <form action="<%= deleteQuestionPath %>" method="post">
    <input type="hidden" name="_method" value="delete" />
    <div>
      <input type="submit" name="delete" value="Delete Question" />
    </div>
  </form>
  <br>
  <form action="<%= editQuestionPath %>" method="get">
    <div>
      <input type="submit" name="edit" value="Edit Question" />
