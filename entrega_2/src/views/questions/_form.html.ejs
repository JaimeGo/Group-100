<div>
  <form action="<%= submitQuestionPath %>" method="post">
    <% if (!question.isNewRecord) { %>
      <input type="hidden" name="_method" value="patch" />
    <% } %>
    <div>
      <label for="name">Asunto</label>
      <input type="text" name="title" value="<%= question.title %>" /></input>
    </div>
    <div>
      <label for="body">Cuerpo de la pregunta</label>
      <textarea type="text" name="body"><%= question.body %></textarea>
    </div>
    <% if (!question.isNewRecord) { %>
      <div>
        <input type="submit" name="update" value="Modificar pregunta" />
      </div>
    <% } else {%>
      <div>
        <input type="submit" name="create" value="Crear pregunta" />
      </div>
    <% } %>
  </form>
</div>