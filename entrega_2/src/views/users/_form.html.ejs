<div>
  <% if (locals.errors) { %>
    <div class="errors">
      Necesitas arreglar los siguiente errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= updateUserPath %>" method="post">
    <input type="hidden" name="_method" value="patch" />
    <div>
      Usuario: <%= user.name %>
    </div>
    <div>
      <label for="password">Nueva contraseña</label>
      <input type="text" name="password" value="<%= user.password %>"></input>
    </div>
    <div>
      <input type="submit" name="update" value="Cambiar contraseña" />
    </div>
  </form>
</div>