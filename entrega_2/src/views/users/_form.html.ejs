<div>
  <%- include('__errors') %>
  <form action="<%= submitUserPath %>" method="post">
    <% if (!user.isNewRecord) { %>
      <input type="hidden" name="_method" value="patch" />
      <div> Usuario: <%= user.name %> </div>
    <% } else { %>
      <div>
        <label for="name">Nombre de usuario</label>
        <input type="text" name="name" value="<%= user.name %>" /></input>
      </div>
    <% } %>
    <div>
      <label for="password">Contraseña</label>
      <input type="text" name="password" value="<%= user.password %>"></input>
    </div>
    <% if (!user.isNewRecord) { %>
      <div>
        <input type="submit" name="update" value="cambiar contraseña" />
      </div>
    <% } else { %>
      <div>
        <input type="submit" name="create" value="registrarse" />
      </div>
    <% } %>
  </form>
  <br>
   <%- include('__back') %>
  <br>
</div>