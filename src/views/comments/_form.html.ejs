<div>
  <form action="<%= submitCommentPath %>" method="post">
    <% if (!comment.isNewRecord) { %>
      <input type="hidden" name="_method" value="patch" />
    <% } %>
    
    <div>
      <label for="body">Texto del comentario</label>
      <textarea type="text" name="body"></textarea>
    </div>
    <br>
    <% if (!comment.isNewRecord) { %>
      <div>
        <input type="submit" name="update" value="Modify Comment" />
      </div>
    <% } else {%>
      <div>
        <input type="submit" name="create" value="Create Comment" />
      </div>
    <% } %>
    <br>
       <%- include('__back') %>
    <br>
  </form>
</div>