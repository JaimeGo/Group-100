<h1>Exams</h1>

<ul>
<% exams.forEach((exam) => { %>
    <li><h3><a href="/exams/<%=exam.id%>"><%=exam.name%></a></h3></li>
    <% const qua = exam.updatedAt %>
    <% var minutes = qua.getMinutes().toString() %>
    <% if (minutes.length == 1) {minutes = "0" + minutes} %>
    <h4>Escrito a las <%= qua.getHours() %>:<%= minutes %> horas el d√≠a <%= qua.getDate() %>/<%= qua.getMonth() + 1 %>/<%= qua.getYear() + 1900%> %> </h4>

    <h4>Votes: <%=exam.votes_sum%></h4>

    <form action="/exams/upvoteExam/<%= exam.id %>"  method="post">
      <input type="hidden" name="_method" value="patch" />
    
      <div>
        <input type="submit" value="Upvote Exam" />
      </div>
    
    </form>

    <form action="/exams/downvoteExam/<%= exam.id %>" method="post">
    <input type="hidden" name="_method" value="patch" />
    
    
      <div>
        <input type="submit"  value="Downvote Exam" />
      </div>
    
  </form>
    
<% }) %>
</ul>


  <form action="<%= newExamPath %>" method="get">
    
      <div>
        <input type="submit" name="create" value="Create Exam" />
      </div>
    
  </form>
