<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>Fundamentals</title>
  </head>

  <body>
	  <% if (locals.errors) { %>
	    <div class="errors">
	      Necesitas arreglar los siguiente errores:
	      <ul>
	        <% errors.forEach(error => { %>
	          <li><%= error.message %></li>
	        <% }); %>
	      </ul>
	    </div>
	  <% } %>
    <%- body %>
  </body>

</html>
